<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecretDMs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SentMessageText" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="MaterialCardView.CurrentSelectValue" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="cardBackgroundColor">@color/grey_background</item>
    </style>

    <style name="TimerUnitsChip" parent="Widget.MaterialComponents.Chip.Choice" >
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="checkedIconTint">?attr/colorPrimary</item>
        <item name="checkedIcon">@drawable/ic_done_24</item>
    </style>

    <style name="ReceivedMessageMaterialCardView" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="cardBackgroundColor">@color/grey</item>
    </style>

    <style name="SentMessageMaterialCardView" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="cardBackgroundColor">@color/blue_light</item>
    </style>

    <style name="GoDownFab" parent="Widget.Design.FloatingActionButton">
        <item name="android:src">@drawable/ic_down_day</item>
        <item name="android:padding">4dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="tint">@color/black</item>
        <item name="borderWidth">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MessagePin.Received" parent="" >
        <item name="android:src">@drawable/ic_message_received_pin</item>
    </style>

    <style name="MessagePin.Sent" parent="" >
        <item name="android:src">@drawable/ic_message_sent_pin</item>
    </style>

</resources>