<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingTop="2dp"
    android:paddingEnd="96dp">

    <View
        android:id="@+id/view_margin_top"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/pin"
            style="@style/MessagePin.Received"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_message_received_pin"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sub_container"
            style="@style/ReceivedMessageMaterialCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/not_ok_red"
                    android:gravity="center"
                    android:lines="1"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="59m"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/msg_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    tools:text="Este es el texto de ejemplo de un mensaje. Vamos a agregar unas paÃ±labras para ver como evoluciona la layout." />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/timestamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:text="vie. 15:30"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/show_info_check_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:checked="false"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
